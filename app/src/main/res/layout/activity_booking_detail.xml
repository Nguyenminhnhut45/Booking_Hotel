<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/lightWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">


        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="@drawable/post_liquidation_img_bg">

            <ImageView
                android:id="@+id/img_QR"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/post_liquidation_camera_icon" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/txt_MP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Tên sản phẩm/Dịch vụ(*)"
            android:textColor="#6E6969"/>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/txt_MP"
            android:background="@color/lightWhite"/>

        <RelativeLayout
            android:id="@+id/post_liquidation_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1">

            <EditText
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"

                android:hint="Giá(*)"
                android:textColor="#6E6969"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"

                android:textSize="16dp"
                android:textStyle="bold"
                app:tint="@color/black" />

        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/post_liquidation_price"
            android:background="@color/lightWhite"/>

        <EditText
            android:id="@+id/txt_tenKs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:padding="10dp"
            android:hint="Mô tả nội dung sản phẩm của bạn"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/post_liquidation_desc_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:textColor="#6E6969"
            android:layout_below="@+id/txt_tenKs"
            android:padding="10dp"/>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="1dp"
            android:layout_below="@+id/post_liquidation_desc_detail"
            android:background="@color/lightWhite"/>

        <RelativeLayout
            android:id="@+id/post_liquidation_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view3">

            <TextView
                android:id="@+id/date_start1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày bắt đầu"
                android:textColor="@color/Black"
                android:textSize="16dp"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/post_liquidation_more_than_icon"
                app:tint="#6E6969" />

        </RelativeLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/post_liquidation_categories"
            android:background="@color/lightWhite"/>

        <RelativeLayout
            android:layout_marginTop="10dp"

            android:id="@+id/post_liquidation_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view4">
            <TextView
                android:id="@+id/date_end1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày Kết thúc"
                android:textColor="@color/Black"
                android:textSize="16dp"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/post_liquidation_more_than_icon"
                app:tint="#6E6969" />

        </RelativeLayout>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/post_liquidation_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view4"
        android:background="@color/white">



        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/marker_icon"
            app:tint="#FF9800" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/post_liquidation_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view4"
        android:background="@color/white"
        android:layout_marginBottom="30dp">




        <Switch
            android:id="@+id/post_liquidation_switch"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>




</LinearLayout>