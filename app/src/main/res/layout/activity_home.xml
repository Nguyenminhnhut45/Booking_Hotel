<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Snow"
    tools:context=".Home"
    android:id="@+id/drawer_layout">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start"
        android:theme="@style/navigationTheme"
        app:headerLayout="@layout/menu_header"
        app:menu="@menu/menu_main">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/txt_usernameuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuộc đời là những chuyến đi"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/txt_fullnameuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Hotel"
                android:fontFamily="sans-serif"
                android:textSize="24sp"
                android:layout_above="@id/txt_usernameuser"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/img_user"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@color/Gold"
                android:layout_above="@id/txt_fullnameuser"
                android:layout_marginLeft="15dp"/>
            <ImageView
                android:layout_width="160dp"
                android:layout_height="175dp"
                android:src="@drawable/travel1"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
    </com.google.android.material.navigation.NavigationView>
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_day">

            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/menu"
                android:background="@color/White_GhostWhite"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"/>
            <FrameLayout
                android:id="@+id/continer"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"/>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/nav_menu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_menu"
                app:itemIconTint="@color/icon_color"
                app:itemRippleColor="@color/black"
                app:itemTextColor="@color/Black"
                app:menu="@menu/navigation_bottom">

            </com.google.android.material.bottomnavigation.BottomNavigationView>
        </RelativeLayout>








    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>